pipeline {
  environment {
    registry = "basavarajbhavi/hackathon"
    registryCredential = 'docker_hub_basavarajbhavi'
    dockerImage = ''
  }
  agent any
  stages{
  stage('checkout') {
                steps{
             checkout([$class: 'GitSCM', branches: [[name: '*/master']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/basavarajbhavi/shopping-cart.git']]])
                     }
                                  }
                                  
      stage ('Build') {
      steps{
        echo "Building Project"
        sh 'npm install'
        sh 'npm run build'
      }
    }
    
  }
}
