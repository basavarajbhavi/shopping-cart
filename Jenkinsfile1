pipeline {
agent any
    tools {nodejs "node"}
  stages{ 
    stage('Git') {
      steps {
        git 'https://github.com/basavarajbhavi/shopping-cart.git'
      }
    }
      stage ('Build') {
      steps{
        echo "Building Project"
        sh 'npm install'
        sh 'npm start'
        sh 'npm run build'
        sh 'npm i ajv'
        sh 'npm install'
      }
    }
    
  }
}
